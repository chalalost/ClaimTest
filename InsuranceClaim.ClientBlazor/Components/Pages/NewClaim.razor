@page "/new-claim"
@using InsuranceClaim.ClientBlazor.Components.Layout.Shared
@inject HttpClient Http
@inject NavigationManager Navigation

<h3>New Claim</h3>

<EditForm Model="NewClaim" OnValidSubmit="HandleSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label>Customer Name:</label>
        <InputText @bind-Value="NewClaim.CustomerName" />
    </div>
    <div>
        <label>Claim Amount:</label>
        <InputNumber @bind-Value="NewClaim.ClaimAmount" />
    </div>
    <div>
        <label>Description:</label>
        <InputTextArea @bind-Value="NewClaim.ClaimDescription" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</EditForm>

@code {
    private ClaimDto NewClaim = new ClaimDto();

    private async Task HandleSubmit()
    {
        await Http.PostAsJsonAsync("api/claims", NewClaim);
        Navigation.NavigateTo("/claims");
    }
}