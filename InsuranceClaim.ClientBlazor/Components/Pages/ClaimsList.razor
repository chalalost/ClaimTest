@page "/claim"
@inject HttpClient http

<h3>Submit a Claim</h3>

<EditForm Model="@InsuranceClaim" OnValidSubmit="HandleSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label>Customer Name:</label>
        <InputText @bind-Value="InsuranceClaim.CustomerName" />
    </div>
    <div>
        <label>Claim Amount:</label>
        <InputNumber @bind-Value="InsuranceClaim.ClaimAmount" />
    </div>
    <div>
        <label>Description:</label>
        <InputTextArea @bind-Value="InsuranceClaim.ClaimDescription" />
    </div>
    <button type="submit">Submit</button>
</EditForm>

<p>@Message</p>

@code {
    [CascadingParameter]
    public Claim Claim { get; set; } = new Claim();

    private string Message;

    private async Task HandleSubmit()
    {
        var response = await Http.PostAsJsonAsync("api/claims/submit-claim", InsuranceClaim);
        if (response.IsSuccessStatusCode)
        {
            Message = "Claim submitted successfully!";
        }
        else
        {
            Message = "Failed to submit claim.";
        }
    }

    public class InsuranceClaim
    {
        public string CustomerName { get; set; }
        public decimal ClaimAmount { get; set; }
        public string ClaimDescription { get; set; }
    }
}
